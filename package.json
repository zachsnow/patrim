{
  "name": "patrim",
  "description": "The Patrim term rewriting language",
  "keywords": [
    "patrim",
    "term",
    "rewriting",
    "programming language"
  ],
  "version": "0.0.7",
  "main": "./dist/src/index.js",
  "bin": {
    "pc": "dist/bin/pc.js"
  },
  "scripts": {
