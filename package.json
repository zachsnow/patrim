    "@typescript/analyze-trace": "^0.10.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.4",
    "rollup": "^4.17.2",
    "saladplate": "^0.1.2",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "files": [
    "dist/**/*"
  ],
